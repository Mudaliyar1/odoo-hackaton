<%- include('../partials/header') %>

<div class="container py-4">
    <!-- Admin Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-danger text-white border-0">
                <div class="card-body text-center py-4">
                    <h1 class="h2 fw-bold mb-2">
                        <i class="fas fa-shield-alt me-2"></i>
                        Admin Dashboard
                    </h1>
                    <p class="mb-0 opacity-75">Platform management and oversight</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-3 p-3 me-3">
                        <i class="fas fa-users fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= stats.totalUsers %></h3>
                        <p class="text-muted mb-0 small">Total Users</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success text-white rounded-3 p-3 me-3">
                        <i class="fas fa-handshake fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= stats.totalSwaps %></h3>
                        <p class="text-muted mb-0 small">Total Swaps</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning text-white rounded-3 p-3 me-3">
                        <i class="fas fa-star fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= stats.totalFeedback %></h3>
                        <p class="text-muted mb-0 small">Reviews</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info text-white rounded-3 p-3 me-3">
                        <i class="fas fa-calendar fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= stats.newUsersThisWeek %></h3>
                        <p class="text-muted mb-0 small">New This Week</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Sections -->
    <div class="row">
        <!-- User Management -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        User Management
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/users" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>
                            View All Users
                        </a>
                        <a href="/admin/users/banned" class="btn btn-outline-danger">
                            <i class="fas fa-ban me-2"></i>
                            Banned Users
                        </a>
                        <a href="/admin/reports" class="btn btn-outline-warning">
                            <i class="fas fa-flag me-2"></i>
                            User Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Management -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bullhorn me-2"></i>
                        Content Management
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/announcements" class="btn btn-outline-success">
                            <i class="fas fa-plus me-2"></i>
                            Create Announcement
                        </a>
                        <a href="/admin/swaps" class="btn btn-outline-info">
                            <i class="fas fa-handshake me-2"></i>
                            Monitor Swaps
                        </a>
                        <a href="/admin/feedback" class="btn btn-outline-warning">
                            <i class="fas fa-star me-2"></i>
                            Review Feedback
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Recent Users -->
                    <% if (recentUsers && recentUsers.length > 0) { %>
                        <h6 class="mb-3">Recent Users</h6>
                        <div class="list-group list-group-flush mb-4">
                            <% recentUsers.forEach(function(user) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1"><%= user.name %></h6>
                                        <p class="mb-1 text-muted"><%= user.email %></p>
                                        <small class="text-muted">Joined: <%= new Date(user.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-<%= user.isBanned ? 'danger' : 'success' %> rounded-pill">
                                        <%= user.isBanned ? 'Banned' : 'Active' %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Recent Swaps -->
                    <% if (recentSwaps && recentSwaps.length > 0) { %>
                        <h6 class="mb-3">Recent Swaps</h6>
                        <div class="list-group list-group-flush mb-4">
                            <% recentSwaps.forEach(function(swap) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">Skill Swap Request</h6>
                                        <p class="mb-1">
                                            <strong><%= swap.requester ? swap.requester.name : 'Unknown' %></strong> â†’
                                            <strong><%= swap.recipient ? swap.recipient.name : 'Unknown' %></strong>
                                        </p>
                                        <small class="text-muted">Created: <%= new Date(swap.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-<%= swap.status === 'pending' ? 'warning' : swap.status === 'accepted' ? 'success' : swap.status === 'completed' ? 'primary' : 'secondary' %> rounded-pill">
                                        <%= swap.status.toUpperCase() %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Recent Feedback -->
                    <% if (recentFeedback && recentFeedback.length > 0) { %>
                        <h6 class="mb-3">Recent Feedback</h6>
                        <div class="list-group list-group-flush">
                            <% recentFeedback.forEach(function(feedback) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">New Review</h6>
                                        <p class="mb-1">
                                            <strong><%= feedback.reviewer ? feedback.reviewer.name : 'Unknown' %></strong> reviewed
                                            <strong><%= feedback.reviewee ? feedback.reviewee.name : 'Unknown' %></strong>
                                        </p>
                                        <small class="text-muted">Posted: <%= new Date(feedback.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-warning text-dark rounded-pill">
                                        <i class="fas fa-star"></i> <%= feedback.rating %>/5
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- No Activity Message -->
                    <% if ((!recentUsers || recentUsers.length === 0) && (!recentSwaps || recentSwaps.length === 0) && (!recentFeedback || recentFeedback.length === 0)) { %>
                        <div class="text-center py-4">
                            <i class="fas fa-clock fs-1 text-muted mb-3"></i>
                            <h5 class="text-muted">No recent activity</h5>
                            <p class="text-muted">Activity will appear here as users interact with the platform.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
