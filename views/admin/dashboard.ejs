<%- include('../partials/admin-header') %>

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card stat-card">
            <div class="card-body text-center py-4">
                <h1 class="h2 fw-bold mb-2">
                    <i class="fas fa-shield-alt me-2"></i>
                    Welcome to Admin Dashboard
                </h1>
                <p class="mb-0 opacity-90">Complete platform management and oversight</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card stat-card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-users fs-1 opacity-75"></i>
                </div>
                <h3 class="h2 fw-bold mb-1"><%= stats.totalUsers %></h3>
                <p class="mb-0 opacity-90">Total Users</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card stat-card success">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-handshake fs-1 opacity-75"></i>
                </div>
                <h3 class="h2 fw-bold mb-1"><%= stats.totalSwaps %></h3>
                <p class="mb-0 opacity-90">Total Swaps</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card stat-card warning">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-star fs-1 opacity-75"></i>
                </div>
                <h3 class="h2 fw-bold mb-1"><%= stats.totalFeedback %></h3>
                <p class="mb-0 opacity-90">Reviews</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card stat-card info">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-calendar fs-1 opacity-75"></i>
                </div>
                <h3 class="h2 fw-bold mb-1"><%= stats.newUsersThisWeek %></h3>
                <p class="mb-0 opacity-90">New This Week</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mb-4">
    <div class="col-lg-4 col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-users fs-1 text-primary"></i>
                </div>
                <h5 class="card-title">User Management</h5>
                <p class="card-text text-muted">Manage users, permissions, and account status</p>
                <a href="/admin/users" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-2"></i>Manage Users
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-handshake fs-1 text-success"></i>
                </div>
                <h5 class="card-title">Swap Oversight</h5>
                <p class="card-text text-muted">Monitor and manage skill exchange requests</p>
                <a href="/admin/swaps" class="btn btn-success">
                    <i class="fas fa-arrow-right me-2"></i>View Swaps
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-envelope fs-1 text-info"></i>
                </div>
                <h5 class="card-title">Contact Messages</h5>
                <p class="card-text text-muted">Manage user contact form submissions</p>
                <a href="/admin/contacts" class="btn btn-info">
                    <i class="fas fa-arrow-right me-2"></i>View Messages
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-bullhorn fs-1 text-warning"></i>
                </div>
                <h5 class="card-title">Announcements</h5>
                <p class="card-text text-muted">Create and manage platform announcements</p>
                <a href="/admin/announcements" class="btn btn-warning">
                    <i class="fas fa-arrow-right me-2"></i>Manage
                </a>
            </div>
        </div>
    </div>
</div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Recent Users -->
                    <% if (recentUsers && recentUsers.length > 0) { %>
                        <h6 class="mb-3">Recent Users</h6>
                        <div class="list-group list-group-flush mb-4">
                            <% recentUsers.forEach(function(user) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1"><%= user.name %></h6>
                                        <p class="mb-1 text-muted"><%= user.email %></p>
                                        <small class="text-muted">Joined: <%= new Date(user.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-<%= user.isBanned ? 'danger' : 'success' %> rounded-pill">
                                        <%= user.isBanned ? 'Banned' : 'Active' %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Recent Swaps -->
                    <% if (recentSwaps && recentSwaps.length > 0) { %>
                        <h6 class="mb-3">Recent Swaps</h6>
                        <div class="list-group list-group-flush mb-4">
                            <% recentSwaps.forEach(function(swap) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">Skill Swap Request</h6>
                                        <p class="mb-1">
                                            <strong><%= swap.requester ? swap.requester.name : 'Unknown' %></strong> â†’
                                            <strong><%= swap.recipient ? swap.recipient.name : 'Unknown' %></strong>
                                        </p>
                                        <small class="text-muted">Created: <%= new Date(swap.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-<%= swap.status === 'pending' ? 'warning' : swap.status === 'accepted' ? 'success' : swap.status === 'completed' ? 'primary' : 'secondary' %> rounded-pill">
                                        <%= swap.status.toUpperCase() %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Recent Feedback -->
                    <% if (recentFeedback && recentFeedback.length > 0) { %>
                        <h6 class="mb-3">Recent Feedback</h6>
                        <div class="list-group list-group-flush">
                            <% recentFeedback.forEach(function(feedback) { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">New Review</h6>
                                        <p class="mb-1">
                                            <strong><%= feedback.reviewer ? feedback.reviewer.name : 'Unknown' %></strong> reviewed
                                            <strong><%= feedback.reviewee ? feedback.reviewee.name : 'Unknown' %></strong>
                                        </p>
                                        <small class="text-muted">Posted: <%= new Date(feedback.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-warning text-dark rounded-pill">
                                        <i class="fas fa-star"></i> <%= feedback.rating %>/5
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>

                    <!-- No Activity Message -->
                    <% if ((!recentUsers || recentUsers.length === 0) && (!recentSwaps || recentSwaps.length === 0) && (!recentFeedback || recentFeedback.length === 0)) { %>
                        <div class="text-center py-4">
                            <i class="fas fa-clock fs-1 text-muted mb-3"></i>
                            <h5 class="text-muted">No recent activity</h5>
                            <p class="text-muted">Activity will appear here as users interact with the platform.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/admin-footer') %>
