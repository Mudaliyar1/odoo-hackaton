<%- include('partials/header') %>

<!-- Hero Section -->
<section class="bg-primary text-white py-5" style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%) !important;">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">Share Skills, Learn Together</h1>
                <p class="lead mb-5">
                    Connect with people in your community to exchange skills and knowledge.
                    Teach what you know, learn what you want.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <% if (!user) { %>
                        <a href="/auth/register" class="btn btn-light btn-lg px-4 py-3">
                            <i class="fas fa-rocket me-2"></i>
                            Get Started Free
                        </a>
                        <a href="/auth/login" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Sign In
                        </a>
                    <% } else { %>
                        <a href="/users/search" class="btn btn-light btn-lg px-4 py-3">
                            <i class="fas fa-search me-2"></i>
                            Find Skills
                        </a>
                        <a href="/users/dashboard" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-5 fw-bold mb-3">How It Works</h2>
                <p class="lead text-muted">Get started with skill swapping in three simple steps</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-user-plus fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Create Your Profile</h4>
                        <p class="text-muted">List the skills you can teach and what you'd like to learn. Add your availability and preferences.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-search fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Find Skill Partners</h4>
                        <p class="text-muted">Search for people who have the skills you want to learn and can benefit from what you offer.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-handshake fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Start Swapping</h4>
                        <p class="text-muted">Send requests, arrange meetings, and start learning from each other. Rate and review your experiences.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Users Section -->
<% if (recentUsers && recentUsers.length > 0) { %>
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-5 fw-bold mb-3">Recent Members</h2>
                <p class="lead text-muted">Meet some of our newest skill sharers</p>
            </div>
        </div>
        <div class="row g-4">
            <% recentUsers.forEach(function(member) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <% if (member.profilePhoto) { %>
                                    <img src="/uploads/<%= member.profilePhoto %>" alt="<%= member.name %>" class="rounded-circle" width="80" height="80" style="object-fit: cover;">
                                <% } else { %>
                                    <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                        <i class="fas fa-user fs-2"></i>
                                    </div>
                                <% } %>
                            </div>
                            <h5 class="fw-bold mb-2"><%= member.name %></h5>
                            <% if (member.location) { %>
                                <p class="text-muted small mb-3">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    <%= member.location %>
                                </p>
                            <% } %>
                            <% if (member.skillsOffered && member.skillsOffered.length > 0) { %>
                                <div class="mb-3">
                                    <% member.skillsOffered.slice(0, 3).forEach(function(skill) { %>
                                        <span class="badge bg-primary me-1 mb-1"><%= skill %></span>
                                    <% }); %>
                                    <% if (member.skillsOffered.length > 3) { %>
                                        <span class="badge bg-secondary">+<%= member.skillsOffered.length - 3 %> more</span>
                                    <% } %>
                                </div>
                            <% } %>
                            <% if (user) { %>
                                <a href="/users/<%= member._id %>" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>
                                    View Profile
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="text-center mt-5">
            <% if (user) { %>
                <a href="/users/search" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-users me-2"></i>
                    View All Members
                </a>
            <% } else { %>
                <a href="/auth/register" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>
                    Join to See More
                </a>
            <% } %>
        </div>
    </div>
</section>
<% } %>

<!-- CTA Section -->
<section class="bg-primary text-white py-5" style="background: linear-gradient(135deg, #6610f2 0%, #0d6efd 100%) !important;">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="display-5 fw-bold mb-4">Ready to Start Learning?</h2>
                <p class="lead mb-5">Join our community of skill sharers and discover new opportunities to grow.</p>
                <% if (!user) { %>
                    <a href="/auth/register" class="btn btn-light btn-lg px-5 py-3">
                        <i class="fas fa-rocket me-2"></i>
                        Join Now - It's Free
                    </a>
                <% } else { %>
                    <a href="/users/search" class="btn btn-light btn-lg px-5 py-3">
                        <i class="fas fa-search me-2"></i>
                        Start Exploring
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</section>

<style>
/* Modern Hero Section */
.hero {
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 50%, #6366f1 100%);
    color: white;
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    animation: float 20s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

.hero-content {
    position: relative;
    z-index: 1;
}

.hero-content h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-6);
    font-weight: 800;
    line-height: 1.1;
    background: linear-gradient(135deg, #ffffff 0%, #f1f5f9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.375rem);
    margin-bottom: var(--space-8);
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    font-weight: 400;
}

.hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--space-8);
}

/* Modern Features Section */
.features {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, #ffffff 0%, var(--gray-50) 100%);
    position: relative;
}

.features::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary-200), transparent);
}

.feature-card {
    text-align: center;
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    border: 1px solid var(--gray-100);
    height: 100%;
}

.feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
}

.feature-icon {
    width: 96px;
    height: 96px;
    background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 50%, #6366f1 100%);
    border-radius: var(--radius-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-6);
    color: white;
    font-size: 2.5rem;
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.feature-icon::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
    transform: rotate(45deg);
    transition: all var(--transition-slow);
}

.feature-card:hover .feature-icon::before {
    animation: shimmer 1.5s ease-in-out;
}

@keyframes shimmer {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.feature-card h3 {
    margin-bottom: var(--space-4);
    color: var(--gray-900);
    font-weight: 700;
    font-size: 1.375rem;
}

.feature-card p {
    color: var(--gray-600);
    line-height: 1.7;
    font-size: 0.9375rem;
}

/* Modern Recent Users Section */
.recent-users {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, var(--gray-50) 0%, var(--primary-50) 100%);
    position: relative;
}

.user-card {
    background: white;
    border-radius: var(--radius-2xl);
    padding: var(--space-6);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    margin-bottom: var(--space-8);
    border: 1px solid var(--gray-100);
    height: 100%;
    position: relative;
    overflow: hidden;
}

.user-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-400), var(--primary-500), var(--primary-600));
    transform: scaleX(0);
    transition: transform var(--transition-normal);
}

.user-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
}

.user-card:hover::before {
    transform: scaleX(1);
}

.user-avatar {
    margin-bottom: var(--space-4);
    position: relative;
}

.profile-photo {
    width: 96px;
    height: 96px;
    border-radius: var(--radius-full);
    object-fit: cover;
    border: 4px solid var(--primary-100);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
}

.user-card:hover .profile-photo {
    border-color: var(--primary-300);
    transform: scale(1.05);
}

.avatar-placeholder {
    width: 96px;
    height: 96px;
    background: linear-gradient(135deg, var(--gray-200), var(--gray-300));
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 2.5rem;
    color: var(--gray-500);
    border: 4px solid var(--gray-100);
    box-shadow: var(--shadow-lg);
}

.user-info h4 {
    margin-bottom: var(--space-2);
    color: var(--gray-900);
    font-weight: 700;
    font-size: 1.125rem;
}

.user-location {
    color: var(--gray-500);
    font-size: 0.875rem;
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-1);
}

.skills-preview {
    margin-bottom: var(--space-4);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    justify-content: center;
}

/* Modern CTA Section */
.cta {
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 50%, #6366f1 100%);
    color: white;
    padding: var(--space-20) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M20 20c0-11.046-8.954-20-20-20v20h20z'/%3E%3C/g%3E%3C/svg%3E");
    animation: float 15s ease-in-out infinite reverse;
}

.cta-content {
    position: relative;
    z-index: 1;
}

.cta-content h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-4);
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, #f1f5f9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.cta-content p {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    margin-bottom: var(--space-8);
    opacity: 0.95;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
}

/* Enhanced Responsive Design */
@media (max-width: 768px) {
    .hero {
        padding: var(--space-16) 0 var(--space-12);
    }

    .hero-actions {
        flex-direction: column;
        align-items: center;
        gap: var(--space-3);
    }

    .hero-actions .btn {
        width: 100%;
        max-width: 280px;
    }

    .features {
        padding: var(--space-16) 0;
    }

    .feature-card {
        padding: var(--space-6);
        margin-bottom: var(--space-6);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }

    .recent-users {
        padding: var(--space-16) 0;
    }

    .user-card {
        margin-bottom: var(--space-6);
    }

    .cta {
        padding: var(--space-16) 0;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 var(--space-4);
    }

    .nav-container {
        padding: 0 var(--space-4);
    }

    .hero-subtitle {
        font-size: 1rem;
    }

    .feature-card {
        padding: var(--space-4);
    }

    .user-card {
        padding: var(--space-4);
    }
}
</style>

<%- include('partials/footer') %>
