<%- include('../partials/header') %>

<div class="container py-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white" style="background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%) !important;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 fw-bold mb-2">Welcome back, <%= user.name %>!</h1>
                            <p class="mb-0 opacity-75">Ready to continue your skill-sharing journey?</p>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <% if (user.skillsOffered && user.skillsOffered.length > 0) { %>
                                <a href="/users/search" class="btn btn-light me-2 mb-2">
                                    <i class="fas fa-search me-1"></i>
                                    Find Skills
                                </a>
                                <a href="/users/profile" class="btn btn-outline-light mb-2">
                                    <i class="fas fa-user me-1"></i>
                                    Edit Profile
                                </a>
                            <% } else { %>
                                <a href="/users/skills" class="btn btn-warning me-2 mb-2">
                                    <i class="fas fa-plus me-1"></i>
                                    Add Your Skills
                                </a>
                                <a href="/users/profile" class="btn btn-outline-light mb-2">
                                    <i class="fas fa-user me-1"></i>
                                    Complete Profile
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Announcements -->
    <% if (announcements && announcements.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <% announcements.forEach(function(announcement) { %>
                    <div class="alert alert-<%= announcement.type %> alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading fw-bold"><%= announcement.title %></h5>
                        <p class="mb-0"><%= announcement.message %></p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% }); %>
            </div>
        </div>
    <% } %>

    <!-- Stats Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning text-white rounded-3 p-3 me-3">
                        <i class="fas fa-clock fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= swapStats.pending %></h3>
                        <p class="text-muted mb-0 small">Pending Requests</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info text-white rounded-3 p-3 me-3">
                        <i class="fas fa-handshake fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= swapStats.accepted %></h3>
                        <p class="text-muted mb-0 small">Active Swaps</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success text-white rounded-3 p-3 me-3">
                        <i class="fas fa-check-circle fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= swapStats.completed %></h3>
                        <p class="text-muted mb-0 small">Completed</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-3 p-3 me-3">
                        <i class="fas fa-chart-bar fs-4"></i>
                    </div>
                    <div>
                        <h3 class="h4 fw-bold mb-1"><%= swapStats.total %></h3>
                        <p class="text-muted mb-0 small">Total Swaps</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Skills Management Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap me-2"></i>
                        My Skills
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Skills I Can Teach -->
                        <div class="col-md-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold text-success mb-0">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>
                                    Skills I Can Teach
                                </h6>
                                <span class="badge bg-success"><%= user.skillsOffered ? user.skillsOffered.length : 0 %></span>
                            </div>
                            <% if (user.skillsOffered && user.skillsOffered.length > 0) { %>
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <% user.skillsOffered.slice(0, 6).forEach(function(skill) { %>
                                        <span class="badge bg-success-subtle text-success p-2"><%= skill %></span>
                                    <% }); %>
                                    <% if (user.skillsOffered.length > 6) { %>
                                        <span class="badge bg-secondary">+<%= user.skillsOffered.length - 6 %> more</span>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="alert alert-warning mb-3">
                                    <small>
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        You haven't added any skills you can teach yet.
                                    </small>
                                </div>
                            <% } %>
                        </div>

                        <!-- Skills I Want to Learn -->
                        <div class="col-md-6 mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="fw-bold text-info mb-0">
                                    <i class="fas fa-book-reader me-1"></i>
                                    Skills I Want to Learn
                                </h6>
                                <span class="badge bg-info"><%= user.skillsWanted ? user.skillsWanted.length : 0 %></span>
                            </div>
                            <% if (user.skillsWanted && user.skillsWanted.length > 0) { %>
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <% user.skillsWanted.slice(0, 6).forEach(function(skill) { %>
                                        <span class="badge bg-info-subtle text-info p-2"><%= skill %></span>
                                    <% }); %>
                                    <% if (user.skillsWanted.length > 6) { %>
                                        <span class="badge bg-secondary">+<%= user.skillsWanted.length - 6 %> more</span>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="alert alert-info mb-3">
                                    <small>
                                        <i class="fas fa-info-circle me-1"></i>
                                        You haven't added any skills you want to learn yet.
                                    </small>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="text-center">
                        <% if (!user.skillsOffered || user.skillsOffered.length === 0 || !user.skillsWanted || user.skillsWanted.length === 0) { %>
                            <div class="alert alert-primary mb-3">
                                <h6 class="alert-heading">
                                    <i class="fas fa-lightbulb me-2"></i>
                                    Complete Your Profile!
                                </h6>
                                <p class="mb-2">Add your skills to start connecting with other learners and teachers in the community.</p>
                            </div>
                        <% } %>
                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                            <a href="/users/skills" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                <% if (!user.skillsOffered || user.skillsOffered.length === 0) { %>
                                    Add Your Skills
                                <% } else { %>
                                    Manage Skills
                                <% } %>
                            </a>
                            <% if (user.skillsOffered && user.skillsOffered.length > 0) { %>
                                <a href="/users/search" class="btn btn-success">
                                    <i class="fas fa-search me-2"></i>
                                    Find Learning Partners
                                </a>
                            <% } %>
                            <a href="/users/profile" class="btn btn-outline-secondary">
                                <i class="fas fa-user me-2"></i>
                                Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <!-- Incoming Requests -->
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-inbox"></i>
                        Incoming Requests
                    </h3>
                </div>
                <div class="card-body">
                    <% if (incomingRequests && incomingRequests.length > 0) { %>
                        <div class="request-list">
                            <% incomingRequests.forEach(function(request) { %>
                                <div class="request-item">
                                    <div class="request-user">
                                        <% if (request.requester.profilePhoto) { %>
                                            <img src="/uploads/<%= request.requester.profilePhoto %>" alt="<%= request.requester.name %>" class="profile-photo profile-photo-sm">
                                        <% } else { %>
                                            <div class="avatar-placeholder-sm">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        <% } %>
                                        <div class="request-info">
                                            <h4><%= request.requester.name %></h4>
                                            <p class="request-skills">
                                                Offers: <%= request.skillsOffered.join(', ') %>
                                            </p>
                                            <p class="request-date">
                                                <i class="fas fa-calendar"></i>
                                                <%= new Date(request.createdAt).toLocaleDateString() %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="request-actions">
                                        <a href="/swaps/<%= request._id %>" class="btn btn-sm btn-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        <div class="card-footer">
                            <a href="/swaps?type=incoming&status=pending" class="btn btn-outline">
                                View All Incoming
                            </a>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h4>No incoming requests</h4>
                            <p>When someone wants to swap skills with you, their requests will appear here.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Outgoing Requests -->
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-paper-plane"></i>
                        Outgoing Requests
                    </h3>
                </div>
                <div class="card-body">
                    <% if (outgoingRequests && outgoingRequests.length > 0) { %>
                        <div class="request-list">
                            <% outgoingRequests.forEach(function(request) { %>
                                <div class="request-item">
                                    <div class="request-user">
                                        <% if (request.recipient.profilePhoto) { %>
                                            <img src="/uploads/<%= request.recipient.profilePhoto %>" alt="<%= request.recipient.name %>" class="profile-photo profile-photo-sm">
                                        <% } else { %>
                                            <div class="avatar-placeholder-sm">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        <% } %>
                                        <div class="request-info">
                                            <h4><%= request.recipient.name %></h4>
                                            <p class="request-skills">
                                                Wants: <%= request.skillsWanted.join(', ') %>
                                            </p>
                                            <p class="request-date">
                                                <i class="fas fa-calendar"></i>
                                                <%= new Date(request.createdAt).toLocaleDateString() %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="request-actions">
                                        <a href="/swaps/<%= request._id %>" class="btn btn-sm btn-primary">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        <div class="card-footer">
                            <a href="/swaps?type=outgoing&status=pending" class="btn btn-outline">
                                View All Outgoing
                            </a>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-paper-plane"></i>
                            <h4>No outgoing requests</h4>
                            <p>Start exploring and send skill swap requests to other users!</p>
                            <a href="/users/search" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                                Find Skills
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Dashboard Styles */
.dashboard-header {
    margin-bottom: var(--space-8);
}

.welcome-card {
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
    color: white;
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--shadow-lg);
    position: relative;
    overflow: hidden;
}

.welcome-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
}

.welcome-content {
    position: relative;
    z-index: 1;
}

.welcome-content h1 {
    font-size: 2rem;
    margin-bottom: var(--space-2);
    font-weight: 700;
}

.welcome-content p {
    opacity: 0.9;
    font-size: 1.125rem;
    margin-bottom: 0;
}

.welcome-actions {
    display: flex;
    gap: var(--space-3);
    position: relative;
    z-index: 1;
}

.announcements-section {
    margin-bottom: var(--space-8);
}

.alert-content h4 {
    margin-bottom: var(--space-2);
    font-weight: 600;
}

.alert-content p {
    margin-bottom: 0;
}

/* Stats Section */
.stats-section {
    margin-bottom: var(--space-8);
}

.stat-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--gray-100);
    transition: all var(--transition-normal);
    display: flex;
    align-items: center;
    gap: var(--space-4);
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
}

.stat-icon.pending {
    background: linear-gradient(135deg, var(--warning-500), #d97706);
}

.stat-icon.accepted {
    background: linear-gradient(135deg, var(--info-500), #0891b2);
}

.stat-icon.completed {
    background: linear-gradient(135deg, var(--success-500), #059669);
}

.stat-icon.total {
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
}

.stat-content h3 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-1);
    color: var(--gray-900);
}

.stat-content p {
    color: var(--gray-600);
    font-weight: 500;
    margin-bottom: 0;
}

/* Request Lists */
.request-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.request-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
}

.request-item:hover {
    border-color: var(--primary-300);
    background-color: var(--primary-50);
}

.request-user {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex: 1;
}

.avatar-placeholder-sm {
    width: 40px;
    height: 40px;
    background: var(--gray-200);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-500);
}

.request-info h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-1);
    color: var(--gray-900);
}

.request-skills {
    font-size: 0.875rem;
    color: var(--gray-600);
    margin-bottom: var(--space-1);
}

.request-date {
    font-size: 0.75rem;
    color: var(--gray-500);
    display: flex;
    align-items: center;
    gap: var(--space-1);
    margin-bottom: 0;
}

/* Empty States */
.empty-state {
    text-align: center;
    padding: var(--space-8);
    color: var(--gray-500);
}

.empty-state i {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    color: var(--gray-400);
}

.empty-state h4 {
    margin-bottom: var(--space-2);
    color: var(--gray-700);
}

.empty-state p {
    margin-bottom: var(--space-4);
}

/* Responsive */
@media (max-width: 768px) {
    .welcome-card {
        flex-direction: column;
        text-align: center;
        gap: var(--space-4);
    }
    
    .welcome-actions {
        width: 100%;
        justify-content: center;
    }
    
    .stat-card {
        flex-direction: column;
        text-align: center;
        gap: var(--space-3);
    }
    
    .request-item {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-3);
    }
    
    .request-actions {
        width: 100%;
    }
    
    .request-actions .btn {
        width: 100%;
    }
}
</style>

<%- include('../partials/footer') %>
